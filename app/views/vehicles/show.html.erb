
<div class="container">
  <div class="row">
    <h3>Personal Information</h3>
    <div class="col-md-6">
      <p><%= @user.first_name %>  <%= @user.last_name %></p>
      <% if @user.photo? %>
      <%= cl_image_tag @user.photo.path, heigth: 70, width: 70, gravity: "face", crop: "crop", class: "avatar-large" %>
      <% end %>
    </div>
  </div>

<div class="container">
  <div class="row">
    <h3>Technical Information</h3>
    <div class="col-md-6">
      <table class="table table-striped">
        <tbody>
          <tr>
            <td>Brand:</td>
            <td><%=  @vehicle.brand %></td>
          </tr>
           <tr>
            <td>Model:</td>
            <td><%= @vehicle.model %></td>
          </tr>
           <tr>
            <td>Engine (cc):</td>
            <td><%= @vehicle.cc %></td>
          </tr>
           <tr>
            <td>Kms/day:</td>
            <td><%= @vehicle.kms %></td>
          </tr>
          <tr>
            <td>Price/day in â‚¬:</td>
            <td><%= @vehicle.price %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="row">
      <div class="col-md-6 text-center">
        <% if @vehicle.photo? %>
          <%= cl_image_tag @vehicle.photo.path, height: 200, crop: "scale", style: "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2));" %>
          <%= cl_image_tag @vehicle.user.photo.path, class: "card-user" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

  <div class="row">
    <div class="col-md-6 text-center">
      <%= link_to "Book", new_booking_path, class: "btn btn-primary" %>
      <%= link_to "Back to vehicles", vehicles_path, class: "btn btn-info" %>
    </div>
  </div>
</div>

