<div class="navbar-wagon">
  <!-- Logo -->

 <div class= "navbar-wagon-right">
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
     <%= image_tag "logo-helmet.png" %>
   <% end %>
   <h1 class= "navbar-name">HELMETT</h1>

 </div>


  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Links -->
    <%= link_to "Login/Sign-up", "#", class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Louer mon 2 roues", "#", class: "navbar-wagon-item navbar-wagon-link" %>



    <!-- Avatar with dropdown menu -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
