<div class="message">
  <% if booking.user.photo? %>
    <%= cl_image_tag booking.user.photo.path, width: 30, height: 30, crop: :fill %>
  <% end %>
  <div class="message-name">
    <h3><%= booking.user.first_name %></h3>
    <p><%= booking.created_at %></p>
  </div>
  <div class="message-body">
    <p><strong><%= booking.message.split[0...4].join(' ')%></strong></p>
    <p>
      <%= booking.message %>
    </p>
  </div>
  <div class="message-status">
    <% case booking.status %>
      <% when "Pending" %>
      <p class="status pending"><%= link_to "#{booking.status}", edit_booking_path(booking) %></p>
      <% when "Accepted" %>
      <p class="status accepted"><%= link_to "#{booking.status}", edit_booking_path(booking) %></p>
      <% when "Declined" %>
      <p class="status declined"><%= link_to "#{booking.status}", edit_booking_path(booking) %></p>
      <% when "Cancelled" %>
      <p class="status cancelled"><%= link_to "#{booking.status}", edit_booking_path(booking) %></p>
      <% end %>
    <p class="price"><%= booking.vehicle.price %></p>
  </div>
</div>
