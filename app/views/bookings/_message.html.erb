<div class="message">
  <% if booking.user.photo? %>
    <%= cl_image_tag booking.user.photo.path, class: "avatar" %>
  <% end %>
  <div class="message-name">
    <h3><%= booking.user.first_name %></h3>
    <p><%= booking.created_at.strftime("%d/%m/%Y") %></p>
  </div>
  <div class="message-body">
    <p><strong><%= booking.message.split[0...4].join(' ')%></strong></p>
    <p>
      <%= booking.message %>
    </p>
  </div>
  <div class="message-status">
    <% case booking.status %>
      <% when "Pending" %>
      <p class="status pending"><%= booking.status %></p>
      <% when "Accepted" %>
      <p class="status accepted"><%= booking.status %></p>
      <% when "Declined" %>
      <p class="status declined"><%= booking.status %></p>
      <% when "Cancelled" %>
      <p class="status cancelled"><%= booking.status %></p>
      <% end %>
     <p class="price"><%= booking.price %> â‚¬</p>
  </div>
  <div class="message-status">
    <%= link_to "Edit", edit_booking_path(booking) , class: "navbar-wagon-item navbar-wagon-link" %>
  </div>
</div>
